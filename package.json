{
  "name": "fuckupathon-slides",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "slidev build",
    "lint": "prettier -w . && cspell .",
    "dev": "slidev --open",
    "export": "slidev export"
  },
  "dependencies": {
    "@slidev/cli": "^52.9.1",
    "@slidev/theme-apple-basic": "latest",
    "qrcode.vue": "^3.6.0",
    "vue": "^3.5.24"
  },
  "devDependencies": {
    "cspell": "^8.17.0",
    "prettier": "^3.6.2",
    "prettier-plugin-slidev": "^1.0.5"
  },
  "cspell": {
    "version": "0.2",
    "language": "en",
    "words": [
      "slidev",
      "qrcode",
      "fuckupathon",
      "fckupathon"
    ],
    "ignorePaths": [
      "node_modules",
      "pnpm-lock.yaml",
      "pnpm-workspace.yaml"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "useTabs": false,
    "overrides": [
      {
        "files": [
          "slides.md",
          "pages/*.md"
        ],
        "options": {
          "parser": "slidev",
          "plugins": [
            "prettier-plugin-slidev"
          ]
        }
      }
    ]
  }
}
